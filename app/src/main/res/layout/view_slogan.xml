<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/discoverTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="COMPLETE" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/theTV"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/discoverTV"
        app:layout_constraintStart_toStartOf="@id/discoverTV"
        app:layout_constraintEnd_toStartOf="@id/sportTV"
        app:layout_constraintBottom_toBottomOf="@id/sportTV"
        android:textSize="16sp"
        android:text="YOUR" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/sportTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/discoverTV"
        app:layout_constraintStart_toEndOf="@id/theTV"
        app:layout_constraintEnd_toEndOf="@id/discoverTV"
        android:textSize="24sp"
        android:gravity="center|top|end"
        android:textStyle="bold"
        android:text="TASKS" />

</androidx.constraintlayout.widget.ConstraintLayout>
